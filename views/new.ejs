<% include partials/header %>
<div class="container">
  <h1 class="text-center">Create a New Campground</h1>

  <div class="form-medium" style="width: 30%; margin: 25px auto;">
    <form action="/campgrounds" method="POST" class="form mt-5 mb-5">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="name"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="image"
          placeholder="image url"
        />
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success btn-block" />
      </div>
    </form>
  </div>

  <a href="/campgrounds" class="btn btn-info">Go Back</a>
</div>
