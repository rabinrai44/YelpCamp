<% include partials/header %>
<div class="container">
  <div class="columns">
    <div class="column">
      <h1>Create a New Campground</h1>
    </div>
  </div>
  <div class="columns">
    <div class="column">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input
            type="text"
            class="form-input"
            name="name"
            placeholder="name"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-input"
            name="image"
            placeholder="image URL"
          />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-success" value="Submit" />
        </div>
      </form>
    </div>
  </div>
  <a href="/campgrounds" class="btn btn-info">Go Back</a>
</div>

