<% include partials/header %>
<div class="container">
  <div class="columns">
    <div class="column">
      <div class="hero bg-dark">
        <div class="hero-body">
          <h1>
            All Campgrounds
          </h1>
          <p>
            Let's ejoy with beautiful campgrounds.
          </p>
          <p>
            <a href="/campgrounds/new" class="btn btn-primary"
              >Add new campground</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="columns">
    <% campgrounds.forEach(campground => { %>
    <div class="column col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-image">
          <img
            src="<%= campground.image %>"
            class="img-responsive"
            alt="campground image"
          />
        </div>

        <div class="card-header">
          <div class="card-title h5"><%= campground.name %></div>
        </div>
      </div>
    </div>

    <% }) %>
  </div>

  <% include partials/footer %>
</div>
